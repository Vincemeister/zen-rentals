<div class="container">
  <div class="row">
    <div class="col-12">
      <h1>Booking #<%= @booking.id %></h1>
      <%= cl_image_tag @booking.rental.photos.first.key, height: 300, width: 400, crop: :fill %>
      <p>Start Date: <%= @booking.start_date %></p>
      <p>End Date: <%= @booking.end_date %></p>
      <p>Total Price: <strong>$</strong><%= @booking.total_price %></p>
      <p>Status: <%= @booking.status %></p>
      <p>Created at: <%= @booking.created_at %></p>
      <p>Updated at: <%= @booking.updated_at %></p>
      <p>Client: <%= @booking.user.email %></p>
      <p>Rental: <%= @booking.rental.title %></p>
    </div>
  </div>
</div>
