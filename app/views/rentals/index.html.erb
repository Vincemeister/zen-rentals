<div class="container">
  <div class="cards-container">
    <% @rentals.each do |rental| %>
    <%= link_to rental_path(rental) do %>
      <div class="main-card text-decoration-none">
        <%= cl_image_tag rental.photos.first.key, width: 300, height: 200, crop: :fill %>
        <div class="content-container p-3">
          <h3>
            <%= rental.title %>
          </h3>
          <p>
            <%= rental.description %>
          </p>
          <div class="detail-box">
            <div class="text-decoration-none">
              $<%= rental.price_per_day %>
            </div>
            <div class="text-decoration-none">
              <%= rental.address %>
            </div>
            <div class="text-decoration-none">
              <i class="fa-solid fa-star"></i>
              <%= rental.rating %>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>
</div>
