  <div class="banner banner-unique-experiences my-7 d-flex align-items-center justify-content-center mx-auto" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path("teamlab_jzqhuw") %>);">
    <%= link_to "Enter a new vision of zen", rentals_path, class: "btn btn-large btn-custom-transparent-secondary" %>
  </div>
