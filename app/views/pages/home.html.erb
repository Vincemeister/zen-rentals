<h3 class="mt-6" style="text-align: center;">Discover zen equipment in <span style="color: #B91372;">Canggu</span></h1>
<div class="container">
  <div class="cards-container">
    <% @rentals.each do |rental| %>
    <%= link_to rental_path(rental) do %>
      <div class="main-card text-decoration-none">
      <% if rental.photos.attached? %>
        <%= cl_image_tag rental.photos.first.key, width: 300, height: 200, crop: :fill %>
        <% else %>
        <%= image_tag "https://res.cloudinary.com/dncij7vr6/image/upload/v1677666474/Rectangle_7_ivn4vk.jpg", class: "card-img-top" %>
      <% end %>
        <div class="content-container p-3">
          <h3>
            <%= rental.title %>
          </h3>
          <p>
            <%= rental.headline %>
          </p>
          <div class="detail-box">
            <div class="text-decoration-none">
              <strong>$</strong></strong><%= rental.price_per_day %>
            </div>
            <div class="text-decoration-none">
              <%= rental.address %>
            </div>
            <div class="text-decoration-none">
              <i class="fa-solid fa-star"></i>
              <%= rental.rating %>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>
</div>
